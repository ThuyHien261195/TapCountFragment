<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemHighScoreTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_high_score_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/item_high_score_text_size</item>
    </style>

    <style name="SettingControllerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/common_horizontal_padding</item>
    </style>
</resources>
