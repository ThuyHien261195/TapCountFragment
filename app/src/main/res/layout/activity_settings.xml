<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_title_seek_bar"
        style="@style/SettingControllerTheme"
        android:text="@string/title_time_seek_bar"
        android:textColor="@android:color/black"
        android:textSize="@dimen/tv_seek_bar_text_size" />

    <TextView
        android:id="@+id/text_time_limit"
        style="@style/SettingControllerTheme"
        android:text="@string/title_result_time_limit"
        android:textColor="@color/color_seek_bar_result_time"
        android:textSize="@dimen/tv_time_text_size" />

    <SeekBar
        android:id="@+id/seek_bar_time_limit"
        style="@style/SettingControllerTheme"
        android:layout_marginBottom="@dimen/seek_bar_vertical_margin"
        android:layout_marginTop="@dimen/seek_bar_vertical_margin"
        android:max="60" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        style="@style/SettingControllerTheme"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/linear_switch_vertical_padding"
        android:paddingTop="@dimen/linear_switch_vertical_padding">

        <TextView
            android:id="@+id/text_title_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/title_record_switch"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_record_text_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_record_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@android:color/darker_gray" />
</LinearLayout>